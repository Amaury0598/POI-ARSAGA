<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/IV_Pfoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                 />

            <TextView
                android:id="@+id/TV_Pnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="#EFEFEF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Manuel Amaury Mendoza García" />

            <TextView
                android:id="@+id/TV_Prol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#222222"
                android:textStyle="italic"
                android:visibility="invisible"
                tools:text="Estudiante" />

            <TextView
                android:id="@+id/TV_Pcarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Perteneciente a la carrera de: "
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TV_Pdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#FFF6F6"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                tools:text="Educar es lo mismo que poner un motor a una barca… Hay que medir, pensar, equilibrar… y poner todo en marcha." />

            <TextView
                android:id="@+id/TV_Coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Cantidad de ARSAGA Coins: "
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/BTN_Pmodificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@drawable/draw_boton_perfil"
                android:text="Modificar Perfil"
                android:textAllCaps="false"
                android:textColor="#FDFDFD"
                android:textSize="16sp"
                app:backgroundTint="@null" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>