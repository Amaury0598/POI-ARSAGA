<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Log_In">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ARSAGA"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/ET_Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:ems="15"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColorHint="#575757" />

        <EditText
            android:id="@+id/ET_Correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:ems="15"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textColorHint="#575757" />

        <Spinner
            android:id="@+id/sp_carreras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:entries="@array/array_Carreras" />

        <EditText
            android:id="@+id/ET_Contrase単a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:ems="15"
            android:hint="Contrase単a"
            android:inputType="textPersonName"
            android:textColorHint="#575757" />

        <EditText
            android:id="@+id/ET_Contrase単a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:ems="15"
            android:hint="Repita Contrase単a"
            android:inputType="textPersonName"
            android:textColorHint="#575757" />

        <Button
            android:id="@+id/BT_registrarse"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:text="Registrarse"
            app:backgroundTint="@null"
            android:background="@drawable/draw_boton_log"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>